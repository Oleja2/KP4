    <Grid Width="625">

        <Grid>
            <Grid.Effect>
                <BlurEffect Radius="3.5"/>
            </Grid.Effect>
            <Grid.Background>
                <ImageBrush ImageSource="/hotel1.jpg"/>
            </Grid.Background>
        </Grid>

        <Grid Margin="34,0,34,0" Width="NaN" Height="192" VerticalAlignment="Center">

            <Grid.Background>
                <ImageBrush ImageSource="/hotel1.jpg" Stretch="UniformToFill"/>
            </Grid.Background>


            <TextBlock Height="23" HorizontalAlignment="Left" Margin="67,20,0,0" x:Name="textBlockLogin" 
                       VerticalAlignment="Top" Width="110" Foreground="White" Text="Логин" FontSize="14" FontFamily="Arial"></TextBlock>
            
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="67,50,0,0" x:Name="textBlockPassword" 
                       VerticalAlignment="Top" Width="110" Foreground="White" Text="Пароль" FontSize="14" FontFamily="Arial"></TextBlock>

            <TextBox Style="{DynamicResource TextBoxStyle1}" Height="23" HorizontalAlignment="Left" Margin="183,22,0,0" Name="textBoxLogin" 
                     VerticalAlignment="Top" Width="222" Background="#997D7676" BorderBrush="Black" IsEnabled="True" FontSize="14" 
                     FontFamily="Arial" KeyUp="LogBlock_Up" Foreground="#FFF7F7F7"/>

            <TextBox Style="{DynamicResource TextBoxStyle2}" Height="23" HorizontalAlignment="Left" Margin="183,50,0,0" Name="textBoxPassword" 
                     FontSize="14" FontFamily="Arial"
                     VerticalAlignment="Top" Width="222" Background="#997D7676" BorderBrush="Black" IsEnabled="False" KeyUp="PassBlock_Up" 
                     Foreground="White"/>

            <Button Style="{DynamicResource ButtonStyle1}" Content="Войти" Height="23" HorizontalAlignment="Left" Margin="183,118,0,0" Name="Vhod" 
                    VerticalAlignment="Top" Width="70" Click="Vhod_Click" Background="#99000000" Foreground="White" BorderBrush="White" FontSize="14" FontFamily="Arial"/>

            <Button Style="{DynamicResource ButtonStyle1}" Content="Сброс" Height="23" HorizontalAlignment="Left" Margin="259,118,0,0" Name="Vihod" 
